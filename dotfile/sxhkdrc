#
# wm independent hotkeys
#

# terminal emulator
hyper + Return
	kitty

# program launcher
hyper + @space
	rofi -show drun

# make sxhkd reload its configuration files:
hyper + Escape
	pkill -USR1 -x sxhkd \
	&& paplay /usr/share/sounds/freedesktop/stereo/bell.oga

hyper + e
	nautilus

Print
    scrot -s '%Y-%m-%d_%H-%M-%S_area.png' \
    -e 'mkdir -p ~/Pictures/Screenshot && xclip -selection clipboard -t image/png -i $f && mv "$f" ~/Pictures/Screenshot/' \
    && paplay /usr/share/sounds/freedesktop/stereo/camera-shutter.oga

XF86MonBrightness{Up,Down}
    brightnessctl s 10{+,-} 

XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5% \
    && paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

super + v
    copyq toggle

hyper + v
	bash $HOME/scripts/voice_toggle.sh

XF86Assistant
    google-chrome https://chatgpt.com/

Menu
    google-chrome https://chatgpt.com/


#
# bspwm hotkeys
#

# quit/restart bspwm
hyper + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
hyper + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
F11
	bspc desktop -l next

# send the newest marked node to the newest preselected node
hyper + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
hyper + g
	bspc node -s biggest

# hide window
hyper + v
    bspc node -g hidden

# unhide window
hyper + shift + v
    bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off


#
# state/flags
#

# set the window state
hyper + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
hyper + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
hyper + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
hyper + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
hyper + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
hyper + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
hyper + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
hyper + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
hyper + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
hyper + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
hyper + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
hyper + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
hyper + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
hyper + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
hyper + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
hyper + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
